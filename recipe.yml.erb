resources:
  # ----------- dotfilesをダウンロード -----------
  - type: git
    repository: git@github.com:<%= dotfiles_repository %>.git
    path: /Users/<%= ENV["USER"] %>/src/github.com/<%= dotfiles_repository %>

  # ----------- 設定ファイルのシンボリックリンクを貼る -----------
  <% dotfiles.each do |file| %>
  - type: symlink
    destination: /Users/<%= ENV["USER"] %>/src/github.com/<%= dotfiles_repository %>/<%= file %>
    source: /Users/<%= ENV["USER"] %>/<%= file %>
  <% end %>

  # ----------- vimの設定 -----------
  - type: command
    script: ln -s /Users/<%= ENV["USER"] %>/src/github.com/<%= dotfiles_repository %>/.vim /Users/<%= ENV["USER"] %>

  # ----------- homebrewのパッケージをインスコ -----------
  <%- homebrew_package_names.each do |homebrew_package_name| -%>
  - type: package
    name: <%= homebrew_package_name %>
  <%- end -%>

  # ----------- Mac Appをcask経由でインスコ -----------
  <%- homebrew_cask_package_names.each do |homebrew_cask_package_name| -%>
  - type: homebrew_cask_package
    name: <%= homebrew_cask_package_name %>
  <%- end -%>

  # ----------- rubyをインスコ -----------
  - type: rbenv_ruby
    # rbenvやruby-buildがないときに同時にインスコするかどうか
    dependencies: true
    global: true
    version: 2.5.0

  - type: defaults
    domain: com.apple.dock
    key: autohide
    value: 1
    notify:
      - restart_dock
  - type: defaults
    domain: com.apple.dock
    key: persistent-apps
    value: []
    notify:
      - restart_dock
  - type: defaults
    domain: com.apple.dock
    key: persistent-others
    value: []
    notify:
      - restart_dock
  - type: defaults
    domain: com.apple.screencapture
    key: type
    value: png
  - type: defaults
    domain: com.apple.screencapture
    key: location
    value: ~/pictures/captures/
  - type: defaults
    key: com.apple.sound.beep.feedback
    value: 1
  - type: defaults
    key: applekeyboarduimode
    value: 3 # allow full keyboard access

handlers:
  - id: restart_dock
    type: command
    script: killall Dock
