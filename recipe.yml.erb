resources:
  - type: git
    repository: git@github.com:sa-inu/dotfiles.git
    path: /Users/<%= ENV['USER'] %>/src/github.com/sa-inu/dotfiles
  - type: command
    script: brew update
  <%- homebrew_package_names.each do |homebrew_package_name| -%>
  - type: package
    name: <%= homebrew_package_name %>
  <%- end -%>
  <%- homebrew_cask_package_names.each do |homebrew_cask_package_name| -%>
  - type: homebrew_cask_package
    name: <%= homebrew_cask_package_name %>
  <%- end -%>
  - type: rbenv_ruby
    version: 2.3.1
    global: true
